<h1 class="country-name">{{name}}</h1>
<div class="country-data">
  <div class="country-details">
    <p><span class="country-details__title">Capital:</span> {{capital}}</p>
    <p><span class="country-details__title">Population:</span> {{population}}</p>
    <ul class="country-details__lang"><span class="country-details__title">Languages:</span>
      {{#each languages}}
      <li>{{this.name}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="country-flag"><img src="{{flag}}" alt="Флаг {{name}}" class="country-flag__img"></div>
</div>